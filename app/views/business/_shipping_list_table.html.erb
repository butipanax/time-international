
<p><b>待发货订单列表：</b></p>
<br />

<table>
  <tr class="tfoot">
    <th colspan = 2>姓名</th>
	<th colspan = 4>地址</th>
	<th colspan = 2>邮编</th>
	<th colspan = 3>联系电话</th>
    <th colspan = 4>订单号</th>
	<th colspan = 8>购买商品</th>

  </tr>

<% if @orders %>
<% @orders.each do |order| %>
  <tr>
    <td colspan = 2><%= order.name %></td>
    <td colspan = 4><%= order.address %></td>
    <td colspan = 2><%= order.postcode %></td>
    <td colspan = 3><%= order.telephone %></td>
    <td colspan = 4><%= order.invoice_number %></td>
	
    <td colspan = 8>
		<% order.line_items.each do |line_item| %>
		<%= line_item.product.title %>&nbsp;<%= line_item.quantity%>份 &nbsp;&nbsp;&nbsp;
		<% end %>
	</td>

  </tr>
<% end %>
<% end %>
</table>
<p><%= will_paginate_with_i18n @orders %></p>
<br />

