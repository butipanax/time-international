<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :产品名称 %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :产品目录 %><br />
    <%= f.text_field :category_id, :prompt => "请选择目录" %>
  </div>
  <div class="field">
    <%= f.label :产品介绍 %><br />
    <%= f.text_area :description, :rows => 20, :cols => 60 %>
  </div>
  <div class="field">
    <%= f.label :价格 %><br />
    <%= f.text_field :price %>
  </div>
  <div class="actions">
    <%= f.submit :生成商品%>
  </div>
<% end %>
