<div class="simple_content">
<h2>运输费用表：</h2>
<br/>

<table>
  <tr>
    <th>重量：</th>
    <th>价格：</th>
  </tr>

<% @shipping_fees.each do |shipping_fee| %>
  <tr>
    <td><%= shipping_fee.weight %></td>
    <td><%= shipping_fee.price %></td>
    <td><%= link_to '查看', shipping_fee %></td>
    <td><%= link_to '编辑', edit_shipping_fee_path(shipping_fee) %></td>
    <td><%= link_to '删除', shipping_fee, :confirm => '确定删除？', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '新增', new_shipping_fee_path %>
</div>