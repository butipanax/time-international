<div class="simple_content">
<h2>待处理订单列表</h2>
<br />

<table>
  <tr class="tfoot">
    <th colspan = 5>账号（email）</th>
    <th colspan = 2>姓名</th>
	<th colspan = 3>旺旺号</th>
    <th colspan = 3>订单号</th>
    <th colspan = 2>订单状态</th>
	<th></th>
	<th></th>
  </tr>

<% if @orders %>
<% @orders.each do |order| %>
  <tr>
    <td colspan = 5><%= order.email %></td>
    <td colspan = 2><%= order.name %></td>
    <td colspan = 3><%= order.wangwang_number %></td>
    <td colspan = 3><%= order.invoice_number %></td>
    <td colspan = 2><%= order.order_status.name %></td>
 
    <td><%= link_to '查看', order %></td>
    <td><%= link_to '编辑', edit_order_path(order) %></td>
  </tr>
<% end %>
<% end %>
</table>
<p><%= will_paginate_with_i18n @orders %></p>
<br />

<%= link_to "返回", '/business/index' %>
</div>
