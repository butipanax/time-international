<div class="simple_content">
<h2>您的历史购物记录</h2>
<br />

<table>
  <tr class="tfoot">
    <th colspan = 3>订单日期</th>
    <th colspan = 4>订单号</th>
    <th colspan = 3>订单状态</th>
	<th colspan = 10>购买物品</th>
	<th colspan = 3>支付金额</th>
  </tr>

<% if @orders %>
<% @orders.each do |order| %>
  <tr>
    <td colspan = 3><%= order.created_at.strftime("%y-%m-%d") %></td>
    <td colspan = 4><%= order.invoice_number %></td>
    <td colspan = 3><%= order.order_status.name %></td>
	<td colspan = 10>
 		<% order.line_items.each do |l| %>
    	<%= l.product.title %> x <%=l.quantity%>件 &nbsp;
		<% end %>
	</td>
    <td colspan = 3><%= number_to_currency(order.pay_price,:unit=>'￥')%></td>


  </tr>
<% end %>
<% end %>
</table>
<p><%= will_paginate_with_i18n @orders %></p>
<br />

<%= link_to "返回", products_path %>
</div>
