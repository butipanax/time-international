<div class="simple_content">
<h2>会员升级及积分设置</h2>
<br />
<table>
  <tr class="tfoot">
    <th>用途名称</th>
    <th>积分奖励额</th>
    <th>积分所需购买物品价格</th>
    <th>达到某等级所需购买次数</th>
    <th>客户等级</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bonus_upgrade_details.each do |bonus_upgrade_detail| %>
  <tr>
    <td><%= bonus_upgrade_detail.objective_name %></td>
    <td><%= bonus_upgrade_detail.bonus_reward_score %></td>
    <td><%= number_to_currency(bonus_upgrade_detail.bonus_reward_price,:unit=>'￥') %></td>
    <td><%= bonus_upgrade_detail.upgrade_count %></td>
    <td><%= bonus_upgrade_detail.upgrade_level %></td>
    <td><%= link_to '查看', bonus_upgrade_detail %></td>
    <td><%= link_to '编辑', edit_bonus_upgrade_detail_path(bonus_upgrade_detail) %></td>
    <td><%= link_to '删除', bonus_upgrade_detail, :confirm => '确定删除？', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '新增', new_bonus_upgrade_detail_path %>
<%= link_to '返回', management_path %>
</div>
